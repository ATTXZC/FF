            <script type="text/javascript">
                var Turno = prompt("Qual seu turno? M = Matutino ou V = Vespertino ou N = Noturno: ");
                
                if (Turno == "M"){
                    document.write("Bom Dia você escolheu Matutino");
                }

                else if (Turno == "V"){
                        document.write("Boa Tarde você escolheu Vespertino");
                }

                else if (Turno == "N"){
                    document.write("Boa noite você escolheu Noturno");
                }

                else{
                    alert("ERRO 404!")
                }
            </script>

            <script type="text/javascript">
                var dia = prompt("Qual seu dia da semana menor? Digite tudo em maisculo");

                dia = dia.toLowerCase()

                switch (dia){
                    case "SEGUNDA":
                        alert("Você escolheu Segunda");
                        break;

                    case "TERCA":
                        alert("Você escolheu Terça");
                        break;

                    case "QUARTA":
                        alert("Você escolheu Quarta");
                        break;
                        
                    case "QUINTA":
                        alert("Você escolheu Quinta");
                        break;

                    case "SEXTA":
                        alert("Você escolheu Sexta");
                        break;
                    
                    case "SABADO":
                        alert("Você escolheu Sabado");
                        break;

                    case "DOMINGO":
                        alert("Você escolheu Domingo");
                        break;
                    
                    default:
                        alert("ERRO 404!")
                }
            </script>
