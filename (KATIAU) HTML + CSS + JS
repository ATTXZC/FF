        <script type="text/javascript">
            var a = prompt("Digite um número:");
            var soma = 0;
            for (j = 0; j<=a; j++){
                if (j % 2 !== 0){
                    soma += j;
                }
            }
            alert("A som a dos numeros de 1 até seu numero é: "+soma);
        </script>

